@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="text-center">
    <h1 class="display-4">Contoso Crafts</h1>
    <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
    <p>Esta pagina es un tutorial que fue probado para aprender ASP .NET core Razor Pages</p>
    <p>Tested by Josoe Ichuta Tuco, <a href="https://github.com/josoeIchuta/ContosoCrafts">GitHub</a></p>
</div>

<div class="card-columns">
    @foreach (var product in Model.Productos)
    {
    <div class="card">
        <div class="card-img" style="background-image:url('@product.Image');"></div>
        <div class="card-body"></div>
        <h5 class="card-title">@product.Title</h5>
    </div>
    }
</div>
          